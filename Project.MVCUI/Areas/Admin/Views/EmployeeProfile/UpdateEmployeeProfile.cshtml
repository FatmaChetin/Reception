@model AdminAddUpdateEmployeeProfilePageVM
@{
    ViewBag.Title = "UpdateEmployeeProfile";
}

<h2>UpdateEmployeeProfile</h2>


<style>
    .genislik {
        width: 300px;
    }
</style>

@using (Html.BeginForm("UpdateEmployeeProfile", "EmployeeProfile", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-sm-12">

            <section class="panel">
                <header class="panel-heading">
                    Çalışan Bilgisi Güncelleme Sayfası
                </header>

                <div class="panel-body">


                    <div class="form-group">
                        <label class="col-sm-2">Çalışan Isim</label>
                        <div class="col-sm-10">



                            @Html.TextBoxFor(x => x.EmployeeProfile.FirstName, new { @class = "form-control-genislik" })
                        </div>
                    </div>


                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2">Çalışan Soyadı</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.EmployeeProfile.LastName, new { @class = "form-control-genislik" })
                        </div>
                    </div>
                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2">Çalışan Telefon Numarası</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.EmployeeProfile.ContactNumber, new { @class = "form-control-genislik" })
                        </div>
                    </div>
                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2">Çalışan Görevi</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(x => x.EmployeeProfile.EmployeeVM, new SelectList(Model.Employees, "ID", "Görev"), "Lutfen seciniz", new { @class = "form-control genislik" })
                        </div>
                    </div>
                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2">İşlem:</label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary">Ekle</button>
                        </div>
                    </div>


                </div>


            </section>


        </div>
    </div>



}

