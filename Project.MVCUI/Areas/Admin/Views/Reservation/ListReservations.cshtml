@model AdminReservationListPageVM
@{
    ViewBag.Title = "ListReservations";
}

<h2>ListReservations</h2>

<script src="~/Areas/Admin/AdminScripts/AdminReservationDTJ.js"></script>


<div class="panel-body">
    <div class="adv-table">
        <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
            <thead>
                <tr>
                    <th>Rezervasyon ID</th>
                    <th>Rezervasyon Zamanı</th>
                    <th>Check in </th>
                    <th>Check out </th>
                    <th>Kişi Sayısı</th>
                    <th class="hidden-phone"> Oluşturma Tarihi</th>
                    <th class="hidden-phone"> Silme Tarihi </th>
                    <th class="hidden-phone"> Güncelleme Tarihi</th>
                    

                </tr>
            </thead>
            <tbody>

                @foreach (AdminReservationVM item in Model.Reservations)
                {
                    <tr class="gradeX">
                        <td>@item.ID</td>
                        <td>@item.ReservationTime</td>
                        <td>@item.CheckIn</td>
                        <td>@item.CheckOut</td>
                        <td>@item.GuestCount</td>
                        <td class="center hidden-phone">@item.CreatedDate</td>
                        <td class="center hidden-phone">@item.DeletedDate</td>
                        <td class="center hidden-phone">@item.UpdatedDate</td>
                       
                    </tr>
                }

            </tbody>


        </table>
    </div>
</div>

