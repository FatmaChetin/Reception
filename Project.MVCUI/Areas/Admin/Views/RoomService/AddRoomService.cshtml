@model AdminRoomServicePageVM
@{
    ViewBag.Title = "AddRoomService";
}

<h2>AddRoomService</h2>


<style>
    .genislik {
        width: 300px;
    }
</style>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-sm-12">

            <section class="panel">
                <header class="panel-heading">
                    Oda Servisi Ekleme Sayfası
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2"> Menü Adı</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.RoomService.Menu, new { @class = "form-control-genislik" })
                        </div>
                    </div>

                    <br /> <br />
                    <div class="form-group">
                        <label class="col-sm-2">İçecekler</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.RoomService.Beverage, new { @class = "form-control-genislik" })
                        </div>
                    </div>
                    <br /> <br />
                    <div class="form-group">
                        <label class="col-sm-2">Ücretler</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.RoomService.Price, new { @class = "form-control-genislik" })
                        </div>
                    </div>
                    <br /> <br />
                    <div class="form-group">
                        <label class="col-sm-2">İşlem:</label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary">Ekle</button>


                        </div>
                    </div>
                </div>

            </section>
        </div>
    </div>
}

