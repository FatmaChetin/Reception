@model AdminEmployeeListPageVM
@{
    ViewBag.Title = "ListEmployees";
}


<header class="panel-heading">
    @Html.ActionLink("Çalışan Ekle", "AddEmployees", null, new { @class = "btn btn-primary" })
</header>

<div class="panel-body">
    <div class="adv-table">
        <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
            <thead>
                <tr>
                   <th>Çalışan ID</th>
                    <th>Çalışan UserName</th>
                    <th>Çalışan Şifresi</th>
                    <th>Çalışanın Görevi</th>
                    <th class="hidden-phone">Sil</th>
                    <th class="hidden-phone">Güncelle</th>
                </tr>
            </thead>
            <tbody>

                @foreach (AdminEmployeeVM item in Model.Employees)
                {
                    <tr class="gradeX">
                        <td>@item.ID</td>
                        <td>@item.UserName</td>
                        <td>@item.Password</td>
                        <td>@item.EmployeeRole </td>

                        <td class="center hidden-phone"> @Html.ActionLink("Sil", "DeleteEmployee", new { id = item.ID }, new { @class = "btn btn-danger" })  </td>
                        <td class="center hidden-phone">@Html.ActionLink("Güncelle", "UpdateEmployee", new { id = item.ID }, new { @class = "btn btn-warning" })</td>

                    </tr>
                }





            </tbody>
        </table>

    </div>
</div>
<script src="~/Areas/Admin/AdminScripts/AdminEmployeeDTJ.js"></script>



